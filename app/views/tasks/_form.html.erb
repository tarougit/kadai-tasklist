<div class="row">
 <div class="col-xs-6">
  </div><%= form_for(tasks) do |f| %>
    <% if tasks.errors.any? %>
      <div class="alert alert-warning">
        <h2><%= pluralize(tasks.errors.count, "error") %> prohibited this message from being saved:</h2>
      
        <ul>
          <% tasks.errors.full_messages.each do |message| %>
            <li><%= message  %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :content, 'メッセージ' %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>

    <%= f.submit '投稿', class: 'btn btn-primary' %>
  <% end %>
 </div>
</div>